<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F5FF"
    android:paddingTop="?attr/actionBarSize">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphOfExp"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginBottom="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/posExpView"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginBottom="185dp"
        android:backgroundTint="#9CBFA7"
        android:onClick="moveToPosPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/negExpView"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginBottom="185dp"
        android:backgroundTint="#E54B4B"
        android:onClick="moveToNegPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#FFFFFF"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/posExpView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="58dp"></Button>

    <Button
        android:id="@+id/helpfulResources"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#E54B4B"
        android:text="Your Ratio is low: click for helpful resources!"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/graphOfExp"
        app:layout_constraintLeft_toLeftOf="@id/posExpView"
        tools:ignore="MissingConstraints"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>